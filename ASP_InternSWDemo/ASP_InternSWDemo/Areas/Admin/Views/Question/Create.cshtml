@model Models.ViewModels.QuesAnsViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Thêm mới
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập thông tin cần thêm mới
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Create", "Question", FormMethod.Post))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.AntiForgeryToken()
                            <h4>Question</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.questionName, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextBoxFor(model => model.questionName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.questionName, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ans1, "Đáp án 1:", htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.TextBoxFor(model => model.ans1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ans1, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.isCorrect1, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.isCorrect1)
                                    @Html.ValidationMessageFor(model => model.isCorrect1, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ans2, "Đáp án 2:", htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.TextBoxFor(model => model.ans2, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ans2, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.isCorrect2, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.isCorrect2)
                                    @Html.ValidationMessageFor(model => model.isCorrect2, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ans3, "Đáp án 3:", htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.TextBoxFor(model => model.ans3, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ans3, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.isCorrect3, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.isCorrect3)
                                    @Html.ValidationMessageFor(model => model.isCorrect3, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ans4, "Đáp án 4:", htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.TextBoxFor(model => model.ans4, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ans4, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ans4, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.isCorrect4)
                                    @Html.ValidationMessageFor(model => model.isCorrect4, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(model => model.ques.TopicId, null, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.DropDownListFor(model => model.ques.TopicId, (IEnumerable<SelectListItem>)ViewBag.TopicId, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ques.TopicId, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-5">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
