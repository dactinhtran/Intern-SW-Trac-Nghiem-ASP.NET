@model Models.ViewModels.QuesAnsViewModel
@{
    ViewBag.Title = "Thêm mới câu hỏi và đáp án";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Thêm mới
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập thông tin cần thêm mới
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        @using (Html.BeginForm("CreateViewModel", "Question", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.LabelFor(model => model.QuestionName, "Câu hỏi:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextBoxFor(model => model.QuestionName, new { htmlAttributes = new { @class = "form-control ", } })
                                @Html.ValidationMessageFor(model => model.QuestionName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ListAns[0].Ans, "Đáp án 1:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextBoxFor(model => model.ListAns[0].Ans, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ListAns[0].Ans, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ListAns[0].IsCorrect, "Đúng/Sai:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.CheckBoxFor(model => model.ListAns[0].IsCorrect)
                                @Html.ValidationMessageFor(model => model.ListAns[0].IsCorrect, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ListAns[1].Ans, "Đáp án 2:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextBoxFor(model => model.ListAns[1].Ans, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ListAns[0].Ans, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ListAns[1].IsCorrect, "Đúng/Sai:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.CheckBoxFor(model => model.ListAns[1].IsCorrect)
                                @Html.ValidationMessageFor(model => model.ListAns[1].IsCorrect, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ListAns[2].Ans, "Đáp án 3:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextBoxFor(model => model.ListAns[2].Ans, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ListAns[2].Ans, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ListAns[2].IsCorrect, "Đúng/Sai:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.CheckBoxFor(model => model.ListAns[2].IsCorrect)
                                @Html.ValidationMessageFor(model => model.ListAns[2].IsCorrect, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ListAns[3].Ans, "Đáp án 4:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextBoxFor(model => model.ListAns[3].Ans, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ListAns[3].Ans, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ListAns[3].IsCorrect, "Đúng/Sai:", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.CheckBoxFor(model => model.ListAns[3].IsCorrect)
                                @Html.ValidationMessageFor(model => model.ListAns[3].IsCorrect, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ques.TopicId, null, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.DropDownListFor(model => model.Ques.TopicId, (IEnumerable<SelectListItem>)ViewBag.TopicId, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Ques.TopicId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
