@model List<Models.EF.Topic>
@{
    ViewBag.Title = "Quản lý đề tài";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sách các chủ đề thi
}
@section jsFooter{
    <script src="/Assets/admin/js/controller/AdminController.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách đề tài
            </div>
            <!-- /.panel-heading -->
                <br />
                <div class="row">
                    <div class="col-lg-10">
                        <div class="col-md-4">
                            <a class="btn btn-primary" href="/Admin/Topic/Create">Thêm mới</a>
                        </div>
                    </div>
                </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Đề tài</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.TopicId">
                                    <td>@item.TopicName</td>                                   
                                    <td>                                        
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.TopicId }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này không?",
                                       OnComplete = "$('#row_" + @item.TopicId + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                        @*
                                            add nuget unobtrusive-ajax
                                            nhớ add thêm thư viện:
                                            <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
                                            ở _layout
                                        *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>